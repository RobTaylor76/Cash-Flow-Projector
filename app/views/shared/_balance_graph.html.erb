<div id="chartcontainer">This is just a replacement in case Javascript is not available or used for SEO purposes</div>
<script type="text/javascript">

  $(document).ready(function() {

      var options = {
       title: {
            text: '<%=locals[:graph_title]%>'
        },
        xAxis: { type: 'datetime', dateTimeLabelFormats: { date: '%e %b' }, lineColor: '#999', labels: { enabled: true} },
        yAxis: { lineWidth: 0,
          labels: {
          enabled: true, align: 'left',
          }
        },
        chart: {
          renderTo: 'chartcontainer',
          type: 'spline'
        },
        series: [{}]
     };

     $.getJSON('<%=locals[:balance_graph_url]%>', function(json_data) {
         options.series = json_data.series;
          var chart = new Highcharts.Chart(options);
  });
});
</script>
