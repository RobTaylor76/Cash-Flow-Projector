<h1>Listing Recurring Transactions</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recurring_transactions.each do |recurring_transaction| %>
  <tr>
    <td><%= I18n.l(recurring_transaction.start_date)%><td>
    <td><%= I18n.l(recurring_transaction.end_date)%><td>
    <td><%= recurring_transaction.reference %><td>
    <td><%= link_to 'Show', recurring_transaction_path(recurring_transaction) %></td>
    <td><%= link_to 'Edit', edit_recurring_transaction_path(recurring_transaction) %></td>
    <td><%= link_to 'Delete', recurring_transaction_path(recurring_transaction), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

