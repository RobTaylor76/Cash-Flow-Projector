<h1>Listing Transactions</h1>
<%= render 'shared/date_range_filter' %>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= I18n.l(transaction.date)%><td>
    <td><%= transaction.reference %><td>
    <td><%= transaction.amount %><td>
    <td><%= link_to 'Show', transaction_path(transaction) %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Delete', transaction_path(transaction), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path %>
