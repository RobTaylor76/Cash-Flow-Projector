<h1>Listing Transactions</h1>
<%= link_to 'New Transaction', new_transaction_path %>
<%= render 'shared/date_range_filter', :locals => {:show_balance_date => false} %>

<table>
  <tr>
    <th>Date</th>
    <th>Reference</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= I18n.l(transaction.date)%></td>
    <td><%= transaction.reference %></td>
    <td><%= transaction.amount %></td>
    <td><%= link_to 'Show', transaction_path(transaction) %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Delete', transaction_path(transaction), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

