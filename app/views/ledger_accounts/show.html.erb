<p id="notice"><%= notice %></p>
<%= link_to 'Edit', edit_ledger_account_path(@ledger_account) %> |
<%= link_to 'Back', ledger_accounts_path %>

<%= render 'form', :locals => {:form_readonly => true } %>

<%= render 'shared/date_range_filter', :locals => {:show_balance_date => true } %>


<%= render 'shared/balance_graph', :locals => {:graph_title => 'Account Balance/Activity', :balance_graph_url => ledger_account_activity_graph_path(@ledger_account, @date_range_filter.to_json.merge(:format => :json)) } %>
<%= render 'shared/pie_graph', :locals => {:graph_title => 'Analysis Code Breakdown',:pie_graph_url => ledger_account_analysis_code_graph_path(@ledger_account, @date_range_filter.to_json.merge(:format => :json)) } %>
<%= render 'shared/ledger_entries' %>

<%= render 'shared/statement_import', :locals => {:statement_import_path => ledger_account_import_statement_path(@ledger_account)} %>
